# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  config.vm.define "web" do |web|
    web.vm.box = "centos/7"
    web.vm.network "forwarded_port", guest: 80, host: 1234, host_ip: "127.0.0.1"
    web.vm.define "webserver"
    web.vm.provision :ansible do |ansible|
        ansible.playbook = "../deploy.yml"
        ansible.groups = {
            "webservers" => ["webserver"],
            "dev" => ["webserver"]
        }
    end
  end

  config.vm.define "db" do |db|
    db.vm.box = "centos/7"
    db.vm.define "dbserver"
    db.vm.provision :ansible do |ansible|
        ansible.playbook = "../deploy.yml"
        ansible.groups = {
            "dbserver" => ["dbserver"],
            "dev" => ["dbserver"]
        }
    end
  end
end

